<!DOCTYPE html>
<html>
    <head>
        <title>
            movie list
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr><th class="col">MOVIE ID</th><th class="col">TITLE</th><th class="col">PRICE</th>
                <%if(flag==1){%>
                    <th>UPDATE</th><th>DELETE</th>
                <%}%>
                <%if(flag==2){%>
                    <th>BOOKING</th>
                <%}%>
            </tr>
            </thead>
            <tbody>
            <%movie.forEach((movie)=>{%>
                <tr>
                    <td><%=movie.movieId%></td>
                    <td><%=movie.movieTittle%></td>
                    <td><%=movie.ticketPrice%></td>
                    <%if(flag==1){%>
                        <td><a href="/movie/admin/insert/<%=movie.movieId%>">UPDATE</a></td>
                        <td><a href="/movie/admin/delete/<%=movie.movieId%>">DELETE</a></td>
                    <%}%>
                    <%if(flag==2){%>
                        <td><a href="/movie/user/ticket/booking/<%=movie.movieId%>">Ticket</a></td>
                    <%}%>
                </tr>
            <%})%>
            </tbody>
        </table>

        <%if(flag==1){%>
            <button type="button" class="btn btn-primary btn-lg"><a href="/movie/admin/insert" style="color: white;">ADD MOVIE</a></button>
        <%}%>
    </body>
</html>