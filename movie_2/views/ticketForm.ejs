<!DOCTYPE html>
<html>
    <head>
        <title>Ticket Book Form</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        <form action="/movie/user/ticket/booking" method="POST">
            <div class="row mb-3">
              <label for="id" class="col-sm-2 col-form-label">Movie Id :</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" id="id" name="id" value="<%=movie_b.movieId%>" readonly>
              </div>
            </div>
            <div class="row mb-3">
              <label for="title" class="col-sm-2 col-form-label">Movie Title :</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" value="<%=movie_b.movieTittle%>" readonly>
              </div>
            </div>
            <div class="row mb-3">
              <label for="ticket" class="col-sm-2 col-form-label">Ticket Price :</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" id="price" name="price" value="<%=movie_b.ticketPrice%>" readonly>
              </div>
            </div>
            <div class="row mb-3">
              <label for="count" class="col-sm-2 col-form-label">Number Ticket :</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" id="count" name="count" required>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Book</button>
          </form>
    </body>
</html>