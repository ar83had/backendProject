<!DOCTYPE html>
<html>
    <head>
        <title>INSERT FORM</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        <h3>ENTER FORM DETAILS</h3>

        <form action="/movie/admin/store" method="POST">

            <div class="form-group">
              <label for="id">Movie Id :</label>
              <input type="text" class="form-control" id="id" name="id"
                <%if(flag){%>placeholder="Current Id :<%=movie.movieId%>"<%}%>
                <%if(!flag){%>placeholder="Enter Movie id" <%}%>>
            </div>

            <div class="form-group">
              <label for="title">Movie Title :</label>
              <input type="text" class="form-control" id="title" name="tittle"
              <%if(flag){%>placeholder="Current title :<%=movie.movieTittle%>"<%}%>
              <%if(!flag){%>placeholder="Enter Movie title" <%}%>>
            </div>

            <div class="form-group">
                <label for="price">Ticket Price :</label>
                <input type="number" class="form-control" id="price" name="price"
                <%if(flag){%>placeholder="Current Price :<%=movie.ticketPrice%>"<%}%>
                <%if(!flag){%>placeholder="Enter Movie Ticket Price" <%}%>>
            </div>

            <%if(flag){%>
            <div class="form-group">
              <input type="hidden" class="form-control" name="preId" value="<%=movie.movieId%>">
            </div>
            <%}%>

            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" name="check" value="checked">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>

            <button type="submit" class="btn btn-primary" name="submit" value="submit">Submit</button>

          </form>
    </body>
</html>